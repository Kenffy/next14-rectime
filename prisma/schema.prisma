// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  profile   String?
  password  String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  times    Time[]
}

model Time {
  id            String     @id @default(uuid())
  startTime     String
  endTime       String
  pause         String
  regular       String // soll
  overTime      String // ist
  flexTime      String // gleizeit
  isVacation    Boolean
  date          DateTime
  description   String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}
